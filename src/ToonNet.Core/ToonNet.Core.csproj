<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        
        <!-- Package Information -->
        <PackageId>ToonNet.Core</PackageId>
        <Description>TOON format serialization library for .NET. Provides high-performance object serialization to TOON format with zero-reflection using expression trees. Perfect for AI/LLM token optimization, configuration files, and data exchange.</Description>
        <PackageTags>toon;serialization;json;yaml;dotnet;performance;ai;llm;token-efficient</PackageTags>
        <PackageReleaseNotes>Initial 1.0.0 release. Full TOON v3.0 spec compliance with 435+ tests.</PackageReleaseNotes>
        
        <!-- Performance: Enable Profile-Guided Optimization -->
        <TieredCompilation>true</TieredCompilation>
        <TieredPGO>true</TieredPGO>
        <DynamicPGO>true</DynamicPGO>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.ObjectPool" Version="8.0.0" />
    </ItemGroup>

</Project>
